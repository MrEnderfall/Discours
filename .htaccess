DirectoryIndex forum.php
Options -Indexes
php_value display_errors 1
php_value error_log /tmp/php.log
RewriteEngine on

#####################################

# Phalcon:

RewriteRule ^(login)$ phalcon/dashboard?page=$1
RewriteRule ^(delete)$ phalcon/dashboard?page=$1
RewriteRule ^(backup)$ phalcon/dashboard?page=$1

RewriteRule ^(twig)$ phalcon/page?page=$1

RewriteRule ^(about)$ phalcon/page?page=$1
RewriteRule ^(principles)$ phalcon/page?page=$1
RewriteRule ^(modlog)$ phalcon/page?page=$1
RewriteRule ^(faq)$ phalcon/page?page=$1
RewriteRule ^(contact)$ phalcon/page?page=$1
RewriteRule ^(developers)$ phalcon/page?page=$1

# Forum:
RewriteRule ^topic/([a-z0-9._-]+)$ ?topic=$1 [END]
RewriteRule ^news/([a-z0-9._-]+)$ ?topic=$1 [END]

RewriteRule ^ph$ https://discou.rs/ph/ [R]
RewriteRule ^ph/$ ?forum=2 [END]

